<body>
 <div id="login-page">
    <div class="container">
      <form class="form-login" action="{{ path("fos_user_security_crm_check") }}" method="post">
      
        <h2 class="form-login-heading"><b>CRM&nbsp;<span>IN MAGAZINES</span></b></h2>
        
        <div class="login-wrap">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}
          <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" placeholder="Identifiant ID" autofocus>
          <br>
          <input type="password" id="password" name="_password" class="form-control" placeholder="Mot de passe">
          <label class="checkbox">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" >
                
             {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
            </label>
          <button class="btn btn-theme btn-submit"  type="submit" title="Se connecter" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" ><i class="fa fa-lock"></i>Se connecter</button>
        </div>
        {% if error %}
        <div class="alert alert-warning">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
      </form>

    </div>
  </div>
