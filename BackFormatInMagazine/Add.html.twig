{% extends ':crm:layout.html.twig' %}

{% block body %}

	<div class="row formulaire-add">
	    <div class="col-lg-10 m-auto main-chart">
	     <div class="row">
	       <div class="col-lg-12 pt-3">
	       	<a href="{{path('softivendor_crm_Backend_formatInMagazine')}}" class="btn btn-theme02 btn-md">Retour à la liste</a>
	         <div class="form-panel pt-6">
	          <div class="title pb-3">
	              <h3><i class="fa fa-angle-right"></i> Création du format</h3>
	            </div> 
	             {{ form_start(form,{'attr': {novalidate:'novalidate','id': 'form_user','class':'form-horizontal style-form'}}) }}
	              
	             <div class="form-group">
	               <label class="col-sm-2 col-sm-2 control-label">Format</label>
	              <div class="col-sm-6">
	                {{ form_widget(form.format,{'attr':{'class':'form-control'}})}}
	                <div class="error">
	                      {{ form_errors(form.format) }}
	                      <span class="error-nom error"></span>    
	                  </div>
	              </div>
	            </div>

	            
	            {{ form_widget(form.enregistrer,{'attr':{'class':'btn btn-theme center-block'}}) }}
	          
	        {{form_end(form)}}
	         
	        </div>
	       </div>
	     </div>

	    </div>

	    <!-- /col-lg-3 -->
	  </div>



<script type="text/javascript">

$(document).ready(function(){
	
	$(".default-date-picker").datepicker( {

 	format: "dd/mm/yyyy",
    viewMode: "days", 
    minViewMode: "days"

	});

})

</script>


{%  endblock body %}